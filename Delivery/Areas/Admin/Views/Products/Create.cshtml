@model Delivery.Core.ViewModels.Products.ProductInputModel
@using Delivery.Core.ViewModels.Categories
@using Delivery.Core.ViewModels.Packagies
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdministrationLayout.cshtml";
}

<form asp-area="Admin" asp-controller="Products"  asp-action="Create" method="post" id="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" aria-required="true" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label"></label>
        <input asp-for="Image" class="form-control" type="file" aria-required="true" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" rows="3"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="HasExtras" class="form-check-label"></label>
        <input asp-for="HasExtras" type="checkbox" class="form-check-input" />
        <span asp-validation-for="HasExtras" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId"
                asp-items="@(new SelectList(Model.Categories, nameof(CategoryViewModel.Id), nameof(CategoryViewModel.Name)))"
        aria-required="true">
            <option>Изберете категория</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" aria-required="true"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" aria-required="true"/>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    
     <div class="mb-3">
        <label asp-for="PackageId" class="form-label"></label>
        <select asp-for="PackageId"
                asp-items="@(new SelectList(Model.Packages, nameof(PackageViewModel.Id), nameof(CategoryViewModel.Name)))"
        aria-required="true">
            <option>Изберете опаковка</option>
        </select>
        <span asp-validation-for="PackageId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MaxProductsInPackage" class="form-label"></label>
        <input asp-for="MaxProductsInPackage" class="form-control" aria-required="true"/>
        <span asp-validation-for="MaxProductsInPackage" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        @for(int i = 0; i < Model.Allergens.Count; i++){
             <label asp-for="@Model.Allergens[i].IsCheked" class="form-check-label">@(Model.Allergens[i].Allergen.Name)</label>
             <input asp-for="@Model.Allergens[i].IsCheked" type="checkbox" class="form-check-input"/>
            <span asp-validation-for="@Model.Allergens[i].IsCheked" class="text-danger"></span>
        }
    </div>

    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-4">
            <button id="submit-btn" type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
        <!-- /.col -->
    </div>
</form>

@section Style{
    <link rel="stylesheet" href="~/css/products/create.css" asp-append-version="true"/>
}